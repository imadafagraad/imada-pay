{
  "entryFile": "src/app.ts",
  "noImplicitAdditionalProperties": "throw-on-extras",
  "controllerPathGlobs": ["src/**/*Endpoint.ts"],
  "spec": {
    "basePath": "api/v1",
    "outputDirectory": "generated",
    "specVersion": 3,
    "securityDefinitions": {
      "jwt": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  },
  "routes": {
    "routesDir": "generated",
    "authenticationModule": "./src/authentication.ts"
  }
}
